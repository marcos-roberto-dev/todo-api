{
  "openapi": "3.0.0",
  "info": {
    "title": "API de gerenciamento de lista de tarefas",
    "description": "Essa API tem como foco o gerenciamento de tarefas, onde é possível criar, editar, deletar e listar tarefas.",
    "version": "1.0.0",
    "contact": {
      "name": "Marcos Roberto",
      "email": "marcosprojetosdev@gmail.com"
    }
  },
  "paths": {
    "/board": {
      "get": {
        "tags": [
          "Board"
        ],
        "summary": "Listar todas as tarefas",
        "description": "Essa rota lista todas as tarefas cadastradas.",
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Board"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Board"
        ],
        "summary": "Criar um novo Board",
        "description": "Essa rota cria um novo Board.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Board"
              }
            }
          }
        },
        "responses": {
          "201": {
            "headers": {
              "Content-Type": "application/json",
              "accept": "text"
            },
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Board"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Board": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "new project",
          "description": "Nome do Board"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Board": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID do Board"
          },
          "name": {
            "type": "string",
            "description": "Nome do Board"
          },
          "description": {
            "type": "string",
            "description": "Descrição do Board"
          },
          "todosId": {
            "type": "string",
            "description": "Id das tarefas do Board"
          },
          "columnsId": {
            "type": "string",
            "description": "Id das colunas do Board"
          }
        }
      }
    }
  }
}